<Window x:Class="WpfAppTovarIS_33Berzegov.View.ModificationAndCreationProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppTovarIS_33Berzegov.View"
        mc:Ignorable="d"
        Title="ModificationAndCreationProductWindow" Height="470" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Label Content="Артикул" HorizontalAlignment="Center"/>
            <TextBox Text="{Binding ProductArticleNumber}" Margin="10"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <Label Content="Название товара" HorizontalAlignment="Center"/>
            <ComboBox x:Name="cmTovarName" Margin="10" DisplayMemberPath="TovarOfName1"
                      SelectedItem="{Binding Product.Tovar.TovarOfName.TovarOfName1}"/>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Label Content="Ед. изм" HorizontalAlignment="Center"/>
            <ComboBox Text="{Binding ProductMeasurementUnit}" Margin="10"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="1">
            <Label Content="Цена" HorizontalAlignment="Center"/>
            <TextBox Text="{Binding ProductCost}" Margin="10"/>
        </StackPanel>
        <StackPanel Grid.Row="2">
            <Label Content="Максимальная скидка" HorizontalAlignment="Center"/>
            <TextBox Text="{Binding ProductMaximumDiscountAmount}" Margin="10"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="2">
            <Label Content="Производителя" HorizontalAlignment="Center"/>
            <ComboBox Text="{Binding Tovar.TovarManufacturer}" Margin="10"/>
        </StackPanel>
        <StackPanel Grid.Row="3">
            <Label Content="Поставщик" HorizontalAlignment="Center"/>
            <ComboBox Text="{Binding Tovar.TovarProvider}" Margin="10"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="3">
            <Label Content="Категория" HorizontalAlignment="Center"/>
            <ComboBox Text="{Binding ProductCategory}" Margin="10"/>
        </StackPanel>
        <StackPanel Grid.Row="4">
            <Label Content="Текущая скидка" HorizontalAlignment="Center"/>
            <TextBox Text="{Binding ProductDiscountAmount}" Margin="10"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="4">
            <Label Content="Кол-во на складе" HorizontalAlignment="Center"/>
            <TextBox Text="{Binding ProductQuantityInStock}" Margin="10"/>
        </StackPanel>
        <StackPanel Grid.Row="5">
            <Label Content="Описание товара" HorizontalAlignment="Center"/>
            <TextBox Text="{Binding Tovar.TovarDescription}" Margin="10"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="5">
            <Label Content="Картинка" HorizontalAlignment="Center"/>
            <TextBox Text="{Binding ProductPhoto}" Margin="10"/>
        </StackPanel>
        <Button Content="Сохранить" Margin="10" Grid.Row="6" Grid.ColumnSpan="2" Name="SaveButtonClick" Click="SaveButtonClick_Click" Background="#FF498C51"/>
    </Grid>
</Window>
